<h1>User info</h1>
<table>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

  <% if @user == current_user %>
    <P><%= link_to "編集", edit_user_path(user) %></p>
  <% end %>