<div class="container">


  <div id="error_explanation">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>




  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="inputTitle" class="d-block">Title</label>
          <%= f.text_field :title, id:"inputTitle", class:'form-control name' %>
        </div>
        <div class="form-group">
          <label for="inputOpnion" class="d-block">Opinion</label>
          <%= f.text_area :body, id:"inputOpnion", class:'form-control name' %>
        </div>
        <div class="form-group">
        <%= f.submit "Update Book", class:'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span> | </span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
