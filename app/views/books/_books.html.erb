<h2>Books</h2>
<table class="table table-hover table-inverse">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
  <% books.each do |book| %>
  <tr>

    <td>
      <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>