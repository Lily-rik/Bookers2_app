<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% books.each do |book| %>
  <tr>

    <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
