<!--user info-->

<%= render 'users/user-info', user: @book.user %>



<%= render 'books/new', book: @book %>


<h1>Book detail</h1>
<table>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
    <td>
      <% if @book.user_id == current_user.id %>
        <span><%= link_to "Edit", edit_book_path(@book) %></span>
      <% end %>
    </td>
    <td>
      <% if @book.user_id == current_user.id %>
      <span><%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm" => "本当に消しますか？" %></span>
      <% end %>
      
      
    </td>
  </tr>
  <% end %>
</table>