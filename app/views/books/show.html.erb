<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @book.user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
        <tr>
          <td>
            <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br>
            <%= link_to user_path(@book.user) do %>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user_id == current_user.id %>
            <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm" => "本当に消しますか？", class:"btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>